{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment_name": {
            "type": "string",
            "defaultValue": "rag-app-env"
        },
        "location": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "acr_name": {
            "type": "string",
            "defaultValue": "ragappacr9626"
        },
        "storage_account_name": {
            "type": "string"
        },
        "acr_admin_password": {
            "type": "securestring"
        },
        "rag_app_username": {
            "type": "securestring",
            "defaultValue": "admin"
        },
        "rag_app_password": {
            "type": "securestring",
            "metadata": { "description": "Password for the RAG application UI." }
        }
    },
    "resources": [
        {
            "name": "ollama-app",
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2023-05-01",
            "kind": "containerapp",
            "location": "[parameters('location')]",
            "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environment_name'))]",
                "configuration": {
                    "secrets": [
                        {
                            "name": "acr-password",
                            "value": "[parameters('acr_admin_password')]"
                        }
                    ],
                    "ingress": {
                        "external": false,
                        "targetPort": 11434,
                        "transport": "http"
                    },
                    "registries": [
                        {
                            "server": "[concat(parameters('acr_name'), '.azurecr.io')]",
                            "username": "[parameters('acr_name')]",
                            "passwordSecretRef": "acr-password"
                        }
                    ],
                    "dapr": { "enabled": false }
                },
                "template": {
                    "containers": [
                        {
                            "image": "[concat(parameters('acr_name'), '.azurecr.io/rag-app-ollama:latest')]",
                            "name": "ollama-app",
                            "resources": {
                                "cpu": 2.0,
                                "memory": "4.0Gi"
                            },
                            "volumeMounts": [
                                {
                                    "mountPath": "/root/.ollama",
                                    "volumeName": "ollama-data-volume"
                                }
                            ]
                        }
                    ],
                    "volumes": [
                        {
                            "name": "ollama-data-volume",
                            "storageType": "AzureFile",
                            "storageName": "ragappstorage"
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 1
                    }
                }
            }
        },
        {
            "name": "rag-app",
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2023-05-01",
            "kind": "containerapp",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.App/containerApps', 'ollama-app')]"
            ],
            "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environment_name'))]",
                "configuration": {
                    "secrets": [
                        {
                            "name": "acr-password",
                            "value": "[parameters('acr_admin_password')]"
                        },
                        {
                            "name": "rag-app-username",
                            "value": "[parameters('rag_app_username')]"
                        },
                        {
                            "name": "rag-app-password",
                            "value": "[parameters('rag_app_password')]"
                        }
                    ],
                    "ingress": {
                        "external": true,
                        "targetPort": 8501,
                        "transport": "http"
                    },
                    "registries": [
                        {
                            "server": "[concat(parameters('acr_name'), '.azurecr.io')]",
                            "username": "[parameters('acr_name')]",
                            "passwordSecretRef": "acr-password"
                        }
                    ],
                    "dapr": { "enabled": false }
                },
                "template": {
                    "containers": [
                        {
                            "image": "[concat(parameters('acr_name'), '.azurecr.io/rag-app:latest')]",
                            "name": "rag-app",
                            "env": [
                                {
                                    "name": "OLLAMA_BASE_URL",
                                    "value": "http://ollama-app"
                                },
                                {
                                    "name": "RAG_APP_USERNAME",
                                    "secretRef": "rag-app-username"
                                },
                                {
                                    "name": "RAG_APP_PASSWORD",
                                    "secretRef": "rag-app-password"
                                }
                            ],
                            "resources": {
                                "cpu": 1.0,
                                "memory": "2.0Gi"
                            },
                            "volumeMounts": [
                                { "mountPath": "/app/docs", "volumeName": "docs-volume" },
                                { "mountPath": "/app/faiss_indexes", "volumeName": "faiss-indexes-volume" },
                                { "mountPath": "/app/logs", "volumeName": "logs-volume" }
                            ]
                        }
                    ],
                    "volumes": [
                        { "name": "docs-volume", "storageType": "AzureFile", "storageName": "ragappstorage" },
                        { "name": "faiss-indexes-volume", "storageType": "AzureFile", "storageName": "ragappstorage" },
                        { "name": "logs-volume", "storageType": "AzureFile", "storageName": "ragappstorage" }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 1
                    }
                }
            }
        }
    ]
}
